<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="wms_android.Views.ClerkDashboardView"
             ControlTemplate="{StaticResource LoadingOverlayTemplate}"
             Title="Clerk Dashboard">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <RefreshView Grid.Row="0" Command="{Binding RefreshCommand}" IsRefreshing="{Binding IsRefreshing}">
            <ScrollView>
                <VerticalStackLayout Padding="20" Spacing="16">
                    <Frame Padding="16" Margin="0,0,0,10" BorderColor="#DDD" CornerRadius="10" HasShadow="True">
                        <VerticalStackLayout Spacing="8">
                            <Label Text="Today's Statistics" FontSize="Large" FontAttributes="Bold" Margin="0,0,0,10"/>
                            <Label Text="{Binding ParcelCount, StringFormat='Parcels Registered: {0}'}" />
                            <Label Text="{Binding NewClientCount, StringFormat='New Clients: {0}'}" />
                            <Label Text="{Binding TotalSales, StringFormat='Total Sales: Ksh {0:N2}'}" />
                        </VerticalStackLayout>
                    </Frame>

                    <Label Text="Pending Orders" FontSize="Large" FontAttributes="Bold" Margin="0,10,0,10"/>
                    <CollectionView ItemsSource="{Binding PendingOrders}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Padding="16" Margin="0,0,0,16" BorderColor="#DDD" CornerRadius="5" HasShadow="True">
                                    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" RowSpacing="8">
                                        <Label Grid.Row="0" Text="{Binding WaybillNumber, StringFormat='Waybill: {0}'}" FontAttributes="Bold"/>
                                        <Label Grid.Row="1" Text="{Binding Sender, StringFormat='Sender: {0}'}" />
                                        <Label Grid.Row="2" Text="{Binding Receiver, StringFormat='Receiver: {0}'}" />
                                        <Label Grid.Row="3" Text="{Binding Destination, StringFormat='Destination: {0}'}" />
                                        <Label Grid.Row="4" Text="{Binding Amount, StringFormat='Amount: Ksh {0:N2}'}" />
                                    </Grid>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </ScrollView>
        </RefreshView>

        <Frame Grid.Row="1" BackgroundColor="#f5f5f5" HasShadow="True" Padding="0" Margin="0">
            <Grid ColumnDefinitions="*,*,*,*" Padding="10">
                <Button Grid.Column="0" 
                        Text="Add Parcel" 
                        Command="{Binding AddParcelCommand}"
                        BackgroundColor="#2196F3"
                        TextColor="White" />
                
                <Button Grid.Column="1" 
                        Text="Home" 
                        Command="{Binding HomeCommand}"
                        BackgroundColor="#4CAF50"
                        TextColor="White" />
                
                <Button Grid.Column="2" 
                        Text="Deliver" 
                        Command="{Binding DeliverCommand}"
                        BackgroundColor="#FF9800"
                        TextColor="White" />
                
                <Button Grid.Column="3" 
                        Text="Test Scan" 
                        Command="{Binding TestScanCommand}"
                        BackgroundColor="#9C27B0"
                        TextColor="White" />
            </Grid>
        </Frame>
    </Grid>
</ContentPage>